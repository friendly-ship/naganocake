<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    
    <h2>ジャンル追加・一覧</h2><br>
    
  <div class="form-group col-md-10">
  <%= form_for(@genre, url: admin_genre_path) do |f| %>
    
        <%= f.label :ジャンル %>
        <%= f.text_field :name,class: "col-md-4" %>
        
        <%= f.radio_button :is_genres_status, :true %>
        <%= f.label :is_genres_status, "有効" %>
        <%= f.radio_button :is_genres_status, :false %>
        <%= f.label :is_genres_status, "無効" %>
        <%= f.submit "変更を保存する" ,class: "btn btn-primary" %>
        
  <% end %>
  </div>
  
  <br>
  
    <table class="table genre-index">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
        </tr>
      </thead>
      
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><% %></td>
          </tr>
        <% end %>
      </tbody>
    </table>